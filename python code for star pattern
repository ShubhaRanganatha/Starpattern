
def starpa(n):
    for i in range(1,n+1):
        for k in range(0,n-i):
            print(end=" ")
          
        for j in range(0,i):
            print("*",end=" ")
        print("\r")
    for i in range(n,0,-1):
        for k in range(0,n-i+1):
            print(end=" ")
        for j in range(0,i-1):
            print("*",end=" ")
        print("\r")
        
 starpa(10)
